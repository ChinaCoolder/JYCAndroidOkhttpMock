<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Normal Request" />
                <Button
                    android:id="@+id/requestWithResponseHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request With Response Header"/>
                <Button
                    android:id="@+id/disableRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disable Request"/>
                <Button
                    android:id="@+id/getUserByParam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request User By Param"/>
                <Button
                    android:id="@+id/getUserByHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request User By Header"/>
                <Button
                    android:id="@+id/getUserWait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request User Wait 3s"/>
                <Button
                    android:id="@+id/loadImageWithGlide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Load Image With Glide"/>
                <Button
                    android:id="@+id/loadImageWithPicasso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Load Image With Picasso"/>
                <Button
                    android:id="@+id/loadImageWithFresco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Load Image With Fresco"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>